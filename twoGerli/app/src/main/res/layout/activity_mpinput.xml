<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mpinput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.devexchanges.navvp.MPinputActivity"
    android:background="#F1BD9D">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:id="@+id/button2"
        android:onClick="button2_Click"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="187dp"
        android:textColor="#353E70"
        android:background="@drawable/return01" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇時間"
        android:id="@+id/button3"
        android:onClick="button3_Click"
        android:layout_above="@+id/btnOK"
        android:layout_alignLeft="@+id/btnOK"
        android:layout_alignStart="@+id/btnOK"
        android:layout_marginBottom="21dp"
        android:textColor="#353E70"/>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:orientation="vertical"
        android:background="#EBECF6"
        android:layout_height="200dp"
        android:layout_width="380dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="20"
            android:id="@+id/editText1"
            android:textColor="#353E70"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:hint="輸入..."/>
    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblOutput"
        android:layout_width="100dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_centerHorizontal="true"
        android:textColor="#353E70"/>

    <TextView
        android:text="時間:"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/lblOutput"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:textSize="20dp"
        android:layout_width="70dp"
        android:textColor="#353E70"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:id="@+id/btnOK"
        android:onClick="button2_Click"
        android:textColor="#353E70"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/lblOutput"
        android:layout_toEndOf="@+id/lblOutput"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@+id/button2"
        android:background="@drawable/checked01" />

</RelativeLayout>
